  std::cout << "\n";
  
  //user wins
  if (user == 3 && computer == 2) {
    
    std::cout << "You chose Scissors. Computer chose Paper.\n";
    std::cout << "Scissors cuts Paper...\n";
    std::cout << "Snippity Snip!\n";
    std::cout << "You win!\n";
    
  }
