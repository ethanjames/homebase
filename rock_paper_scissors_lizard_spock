  std::cout << "===================\n\n";
  
  std::cout << "1) ✊\n";
  std::cout << "2) ✋\n";
  std::cout << "3) ✌️ \n";
  std::cout << "4) Lizard \n"; 
  std::cout << "5) Spock \n";
  
  std::cout << "shoot!\n\n";
  
  std::cout << "Shoot your shot: ";
