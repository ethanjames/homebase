    std::cout << "Swoosh!\n";
    std::cout << "You lose! go cry in a corner!\n";
    
  }
  else if (computer == 1 && user == 4) {
    
     std::cout << "You chose Lizard. Computer chose Rock.\n";
    std::cout << "Rock crushes Lizard...\n";
    std::cout << "Splat! ew guts r evrywhere\n";
    std::cout << "You lose! go cry in a corner!\n";
    
  }
  else if (computer == 4 && user == 5) {
    
     std::cout << "You chose Spock. Computer chose Lizard.\n";
    std::cout << "Lizard poisons Spock...\n";
    std::cout << "Gargle gargle... *drops dead*\n";
    std::cout << "You lose! go cry in a corner!\n";
    
  }
  else if (computer == 5 && user == 3) {
    
     std::cout << "You chose Scissors. Computer chose Spock.\n";
    std::cout << "Spock smashes Scissors...\n";
    std::cout << "Smash!\n";
    std::cout << "You lose! go cry in a corner!\n";
    
  }
  else if (computer == 3 && user == 4) {
    
     std::cout << "You chose Lizard. Computer chose Scissors.\n";
    std::cout << "Scissors decapitates Lizard...\n";
    std::cout << "*guillatine noises*... Thunk!\n";
    std::cout << "You lose! go cry in a corner!\n";
    
  }
  else if (computer == 4 && user == 2) {
    
     std::cout << "You chose Paper. Computer chose Lizard.\n";
    std::cout << "Lizard eats Paper...\n";
    std::cout << "Nom nom...\n";
    std::cout << "You lose! go cry in a corner!\n";
    
  }
  else if (computer == 2 && user == 5) {
    
     std::cout << "You chose Spock. Computer chose Paper.\n";
    std::cout << "Paper disproves Spock...\n";
    std::cout << "'Spock is wrong! I disprove you!''\n";
    std::cout << "You lose! go cry in a corner!\n";
    
